/* pages/wode/wode.wxss */
/* user */
page{
    background:#f8f8f8;
   }
   /* user格式设置 */
.user-box {
    height: 180rpx;
    display: flex;
    align-items: center;
    margin: 0rpx;
    background-color: #b2d2ec;
}
.user-img {
    height: 180rpx;
    width: 30%;
    padding-left: 20px;
    padding-top: 15px;
}
.user-img image {
    height: 150rpx;
    width: 150rpx;
    border-radius: 50%;
    overflow:hidden;
}
.user {
    width: 75%;
}
.user-name {
    font-size: 50rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}
.user-id {
    font-size: 32rpx;
    margin-bottom: 10rpx;
}
/* 个人资料 帮助 设置格式 */
.per_info {
    background-color: white;
    height: 120rpx;
    display: flex;
    align-items: center;
    border-top: 25rpx solid #f8f8f8;
    margin: 0rpx;
}
.per_info_img-01 {
    flex-direction: row;
    height: 120rpx;
    width: 20%;
}
.per_info_img-01 image {
    height: 90rpx;
    width: 60%;
    padding-left: 12px;
    padding-top: 7px;
}
.per_info_text {
    flex-direction: row;
    width: 60%;
    height: 120rpx;
    font-size: 36rpx;
    line-height: 120rpx;
}
.per_info_img-02 {
    flex-direction: row;
    height: 120rpx;
    width: 20%;
}
.per_info_img-02 image {
    height:50rpx;
    width: 30%;
    padding-left: 40px;
    padding-top: 18px;
}
/* 常用功能格式 */
.func-box{
    width: 100%;
    height: 225px;
    background-color: white;
    border-top: 25rpx solid #f8f8f8;
    align-items: center;
}
.func_text{
    width: 96%;
    height: 40px;
    margin-left: 2%;
    border-bottom: 2rpx solid #8f8f8f;
}
.func-unit-box{
    display: flex;
}
.func-unit{
    width: 25%; 
    height: 80px; 
    display: flex; 
    align-items: center; 
    flex-direction: column;
}
.func-image{
    width:40%;
}